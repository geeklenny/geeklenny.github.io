// Custom styles.


.mobile_code {
  padding: 2px 3px 0 3px;
  +mobile(){display:none;}
}

.mobile_code .code_img{
	padding: 20px;
	border: 1px solid #d1d2d6;
	position: fixed;
	right: 38px;
	bottom: 50%;
	background-color: #fff;
	display: none;
	z-index: 1024;
	}
.mobile_code .code_img img {
	width: 156px;
	height: 156px;
}
.mobile_code:hover .code_img{display:block;}


.side-buttons {
    position: fixed;
    width: 30px;
    bottom: 50%;
    right: 0px;
    z-index: 1000;
}

.side-buttons .side-buttons-box {
    box-sizing: border-box;
	position: relative;
    top: 0;
    left: 0;
    width: 100%;
	height: 36px;
    margin-bottom: 1px;	
    background: #ccc;
	font-size: 16px;
    cursor: pointer;
    text-align: center;
    opacity: 1; 
	color: #fff;
    border-radius: 0px;
	overflow:hidden;
	line-height: 2;
}

.side-buttons .side-buttons-box:hover {
	background-color: #669fdd;
}
.side-buttons-box:hover .bt-left{display:none;}
.side-buttons .side-buttons-box p{
	color:#333;
	font-size:12px;
	line-height:12px;
	margin:0;
	padding:0;
	padding-top:5px;
}

.mail_box{
  padding: 2px 3px ;
  +mobile(){display:none;}
}

.mail_box a{
    color: #fff;
    text-decoration: none;
    border-bottom: 0;
    word-wrap: normal;
}



.site-author-name {
  font-size: 16px;
}

.site-author-image {
  border-radius: 100%;
  padding: 2px;
  border: 2px dashed #fff;
  animation: cycle 2s 0.5s forwards;
  transition: border-radius 2s;
}
.site-author-image:hover {
  border-radius: 0;
  border: 2px solid #ffeb3b;
}
